<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_marginTop="16dp"
        app:cardElevation="0dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/shop_rank_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginStart="24dp"
                android:textAlignment="center"
                android:width="40dp"
                android:textSize="20sp"
                android:background="@drawable/rank_bg"
                android:layout_centerVertical="true"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/shop_profile_rank"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@id/shop_rank_number"
                app:srcCompat="@drawable/ic_account_circle_black_24dp"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/shop_profile_rank"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/shop_name_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/shop_profile_rank"
                    android:text="@string/shop"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/shop_piece"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shop_name_rank"
                    android:text="@string/test" />

            </androidx.appcompat.widget.LinearLayoutCompat>


        </RelativeLayout>






    </androidx.cardview.widget.CardView>



</RelativeLayout>